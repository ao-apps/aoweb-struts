<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <form-bean name="passwordEvaluatorForm" type="com.aoindustries.website.clientarea.control.password.PasswordEvaluatorForm" />
        <form-bean name="businessAdministratorPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.BusinessAdministratorPasswordSetterForm" />
        <form-bean name="interBasePasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.InterBasePasswordSetterForm" />
        <form-bean name="linuxAccountPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.LinuxAccountPasswordSetterForm" />
        <form-bean name="mySQLPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.MySQLPasswordSetterForm" />
        <form-bean name="postgreSQLPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.PostgreSQLPasswordSetterForm" />
        <form-bean name="globalPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.GlobalPasswordSetterForm" />
    </form-beans>

    <!-- ========== Global Error Handlers =================================== -->
    <global-exceptions>
        <exception key="Exception.message" type="java.lang.Exception" handler="com.aoindustries.website.ExceptionHandler" />
    </global-exceptions>

    <!-- ========== Global Forward Definitions ============================== -->
    <global-forwards>
        <!-- / -->
        <forward name="exception" module="" path="/WEB-INF/jsp/exception.jsp" redirect="false" />
        <forward name="login" module="" path="/login.do" redirect="false" />
    </global-forwards>

    <!-- ========== Action Mapping Definitions ============================== -->
    <action-mappings>
        <action
            path="/index"
            type="com.aoindustries.website.HttpAction"
        >
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/index.jsp" redirect="false" />
        </action>
        <action
            path="/monitor/mysql-replication-monitor"
            type="com.aoindustries.website.clientarea.control.monitor.MySQLReplicationMonitorAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/monitor/mysql-replication-monitor.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/monitor/mysql-replication-monitor.jsp" redirect="false" />
        </action>
        <action
            path="/password/index"
            type="com.aoindustries.website.HttpAction"
        >
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/index.jsp" redirect="false" />
        </action>
        <action
            path="/password/password-evaluator"
            name="passwordEvaluatorForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.HttpsAction"
        >
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/password-evaluator.jsp" redirect="false" />
        </action>
        <action
            path="/password/password-evaluator-completed"
            name="passwordEvaluatorForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.PasswordEvaluatorCompletedAction"
        >
            <forward name="input" module="" path="/WEB-INF/jsp/clientarea/control/password/password-evaluator.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/password-evaluator.jsp" redirect="false" />
        </action>
        <action
            path="/password/password-generator"
            type="com.aoindustries.website.clientarea.control.password.PasswordGeneratorAction"
        >
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/password-generator.jsp" redirect="false" />
        </action>
        <action
            path="/password/business-administrator-password-setter"
            name="businessAdministratorPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.BusinessAdministratorPasswordSetterAction"
        >
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/business-administrator-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/business-administrator-password-setter-completed"
            name="businessAdministratorPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.BusinessAdministratorPasswordSetterCompletedAction"
        >
            <forward name="input" module="" path="/WEB-INF/jsp/clientarea/control/password/business-administrator-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/business-administrator-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/interbase-password-setter"
            name="interBasePasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.InterBasePasswordSetterAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/interbase-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/interbase-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/interbase-password-setter-completed"
            name="interBasePasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.InterBasePasswordSetterCompletedAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/interbase-password-setter.jsp" redirect="false" />
            <forward name="input" module="" path="/WEB-INF/jsp/clientarea/control/password/interbase-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/interbase-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/linux-account-password-setter"
            name="linuxAccountPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.LinuxAccountPasswordSetterAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/linux-account-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/linux-account-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/linux-account-password-setter-completed"
            name="linuxAccountPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.LinuxAccountPasswordSetterCompletedAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/linux-account-password-setter.jsp" redirect="false" />
            <forward name="input" module="" path="/WEB-INF/jsp/clientarea/control/password/linux-account-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/linux-account-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/mysql-password-setter"
            name="mySQLPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.MySQLPasswordSetterAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/mysql-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/mysql-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/mysql-password-setter-completed"
            name="mySQLPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.MySQLPasswordSetterCompletedAction"
        >
            <forward name="input" module="" path="/WEB-INF/jsp/clientarea/control/password/mysql-password-setter.jsp" redirect="false" />
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/mysql-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/mysql-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/postgresql-password-setter"
            name="postgreSQLPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.PostgreSQLPasswordSetterAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/postgresql-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/postgresql-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/postgresql-password-setter-completed"
            name="postgreSQLPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.PostgreSQLPasswordSetterCompletedAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/postgresql-password-setter.jsp" redirect="false" />
            <forward name="input" module="" path="/WEB-INF/jsp/clientarea/control/password/postgresql-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/postgresql-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/global-password-setter"
            name="globalPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.GlobalPasswordSetterAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/global-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/global-password-setter.jsp" redirect="false" />
        </action>
        <action
            path="/password/global-password-setter-completed"
            name="globalPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.GlobalPasswordSetterCompletedAction"
        >
            <forward name="permission-denied" module="" path="/WEB-INF/jsp/clientarea/control/password/global-password-setter.jsp" redirect="false" />
            <forward name="input" module="" path="/WEB-INF/jsp/clientarea/control/password/global-password-setter.jsp" redirect="false" />
            <forward name="success" module="" path="/WEB-INF/jsp/clientarea/control/password/global-password-setter.jsp" redirect="false" />
        </action>
    </action-mappings>
    
    <!-- ========== Controller ============================================== -->
    <controller
        nocache="true"
    />

    <!-- ========== Message Resources ======================================= -->
    <message-resources
        parameter="com.aoindustries.website.SiteApplicationResources"
        null="false"
    />
    <message-resources
        key="/ApplicationResources"
        parameter="com.aoindustries.website.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/ApplicationResources"
        parameter="com.aoindustries.website.clientarea.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/accounting/ApplicationResources"
        parameter="com.aoindustries.website.clientarea.accounting.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/control/ApplicationResources"
        parameter="com.aoindustries.website.clientarea.control.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/ticket/ApplicationResources"
        parameter="com.aoindustries.website.clientarea.ticket.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/webmail/ApplicationResources"
        parameter="com.aoindustries.website.clientarea.webmail.ApplicationResources"
        null="false"
    />

    <!-- ========== Validator Plug-In ======================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/validator-custom-rules.xml,/WEB-INF/validator-constants.xml,/WEB-INF/validator-clientarea-control.xml"/>
    </plug-in>
</struts-config>
