<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
    "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>
        <form-bean name="passwordEvaluatorForm" type="com.aoindustries.website.clientarea.control.password.PasswordEvaluatorForm" />
        <form-bean name="businessAdministratorPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.BusinessAdministratorPasswordSetterForm" />
        <form-bean name="interBasePasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.InterBasePasswordSetterForm" />
        <form-bean name="linuxAccountPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.LinuxAccountPasswordSetterForm" />
        <form-bean name="mySQLPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.MySQLPasswordSetterForm" />
        <form-bean name="postgreSQLPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.PostgreSQLPasswordSetterForm" />
        <form-bean name="globalPasswordSetterForm" type="com.aoindustries.website.clientarea.control.password.GlobalPasswordSetterForm" />
    </form-beans>

    <!-- ========== Global Error Handlers =================================== -->
    <global-exceptions>
        <exception key="Exception.message" type="java.lang.Exception" handler="com.aoindustries.website.ExceptionHandler" />
    </global-exceptions>

    <!-- ========== Global Forward Definitions ============================== -->
    <global-forwards>
        <!-- / -->
        <forward name="exception" contextRelative="true" path="/WEB-INF/jsp/exception.jsp" />
        <forward name="login" contextRelative="true" path="/login.do" />
    </global-forwards>

    <!-- ========== Action Mapping Definitions ============================== -->
    <action-mappings>
        <action
            path="/index"
            type="com.aoindustries.website.HttpAction"
        >
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/index.jsp" redirect="false" />
        </action>
        <action
            path="/password/index"
            type="com.aoindustries.website.HttpAction"
        >
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/index.jsp" redirect="false" />
        </action>
        <action
            path="/password/passwordEvaluator"
            name="passwordEvaluatorForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.HttpsAction"
        >
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/passwordEvaluator.jsp" redirect="false" />
        </action>
        <action
            path="/password/passwordEvaluatorCompleted"
            name="passwordEvaluatorForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.PasswordEvaluatorCompletedAction"
        >
            <forward name="input" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/passwordEvaluator.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/passwordEvaluator.jsp" redirect="false" />
        </action>
        <action
            path="/password/passwordGenerator"
            type="com.aoindustries.website.clientarea.control.password.PasswordGeneratorAction"
        >
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/passwordGenerator.jsp" redirect="false" />
        </action>
        <action
            path="/password/businessAdministratorPasswordSetter"
            name="businessAdministratorPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.BusinessAdministratorPasswordSetterAction"
        >
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/businessAdministratorPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/businessAdministratorPasswordSetterCompleted"
            name="businessAdministratorPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.BusinessAdministratorPasswordSetterCompletedAction"
        >
            <forward name="input" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/businessAdministratorPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/businessAdministratorPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/interBasePasswordSetter"
            name="interBasePasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.InterBasePasswordSetterAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/interBasePasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/interBasePasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/interBasePasswordSetterCompleted"
            name="interBasePasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.InterBasePasswordSetterCompletedAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/interBasePasswordSetter.jsp" redirect="false" />
            <forward name="input" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/interBasePasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/interBasePasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/linuxAccountPasswordSetter"
            name="linuxAccountPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.LinuxAccountPasswordSetterAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/linuxAccountPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/linuxAccountPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/linuxAccountPasswordSetterCompleted"
            name="linuxAccountPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.LinuxAccountPasswordSetterCompletedAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/linuxAccountPasswordSetter.jsp" redirect="false" />
            <forward name="input" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/linuxAccountPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/linuxAccountPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/mySQLPasswordSetter"
            name="mySQLPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.MySQLPasswordSetterAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/mySQLPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/mySQLPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/mySQLPasswordSetterCompleted"
            name="mySQLPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.MySQLPasswordSetterCompletedAction"
        >
            <forward name="input" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/mySQLPasswordSetter.jsp" redirect="false" />
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/mySQLPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/mySQLPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/postgreSQLPasswordSetter"
            name="postgreSQLPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.PostgreSQLPasswordSetterAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/postgreSQLPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/postgreSQLPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/postgreSQLPasswordSetterCompleted"
            name="postgreSQLPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.PostgreSQLPasswordSetterCompletedAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/postgreSQLPasswordSetter.jsp" redirect="false" />
            <forward name="input" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/postgreSQLPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/postgreSQLPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/globalPasswordSetter"
            name="globalPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.GlobalPasswordSetterAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/globalPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/globalPasswordSetter.jsp" redirect="false" />
        </action>
        <action
            path="/password/globalPasswordSetterCompleted"
            name="globalPasswordSetterForm"
            scope="request"
            validate="false"
            type="com.aoindustries.website.clientarea.control.password.GlobalPasswordSetterCompletedAction"
        >
            <forward name="permissionDenied" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/globalPasswordSetter.jsp" redirect="false" />
            <forward name="input" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/globalPasswordSetter.jsp" redirect="false" />
            <forward name="success" contextRelative="true" path="/WEB-INF/jsp/clientarea/control/password/globalPasswordSetter.jsp" redirect="false" />
        </action>
    </action-mappings>
    
    <!-- ========== Controller ============================================== -->
    <controller
        nocache="true"
    />

    <!-- ========== Message Resources ======================================= -->
    <message-resources
        parameter="com.aoindustries.website.SiteApplicationResources"
        null="false"
    />
    <message-resources
        key="/ApplicationResources"
        parameter="com.aoindustries.website.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/ApplicationResources"
        parameter="com.aoindustries.website.clientarea.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/clientarea/control/ApplicationResources"
        parameter="com.aoindustries.website.clientarea.control.ApplicationResources"
        null="false"
    />
    <message-resources
        key="/aoserv/client/ApplicationResources"
        parameter="com.aoindustries.aoserv.client.ApplicationResources"
        null="false"
    />

    <!-- ========== Validator Plug-In ======================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" value="/WEB-INF/lib/validator-rules.xml,/WEB-INF/validator-custom-rules.xml,/WEB-INF/validator-constants.xml,/WEB-INF/validator-clientarea-control.xml"/>
    </plug-in>
</struts-config>
