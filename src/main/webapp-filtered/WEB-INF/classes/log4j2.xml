<!-- TODO: How to use standard Java logging so goes to our ticket system? -->
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.opensymphony.xwork2" level="@{log4j2.xwork2.level}"/>
		<Logger name="org.apache.struts2" level="@{log4j2.struts2.level}"/>
		<Root level="@{log4j2.root.level}">
			<AppenderRef ref="STDOUT"/>
		</Root>
	</Loggers>
</Configuration>
