<!-- META-INF/context.xml is used for local development deployment only -->
<Context path="/aoweb-struts">

  <Parameter
    name="root.aoserv.client.username"
    value="@{aoweb-struts.root.aoserv.client.username}"
    override="false"
  />
  <Parameter
    name="root.aoserv.client.password"
    value="@{aoweb-struts.root.aoserv.client.password}"
    override="false"
  />

  <Parameter
    description="reCAPTCHA project name"
    name="com.aoindustries.web.struts.ReCaptcha.projectName"
    value="@{aoweb-struts.com.aoindustries.web.struts.ReCaptcha.projectName}"
    override="false"
  />
  <Parameter
    description="reCAPTCHA website key"
    name="com.aoindustries.web.struts.ReCaptcha.sitekey"
    value="@{aoweb-struts.com.aoindustries.web.struts.ReCaptcha.sitekey}"
    override="false"
  />
  <Parameter
    description="Path to the Google Credentials JSON file"
    name="com.aoindustries.web.struts.ReCaptcha.googleCredentialsJson"
    value="@{aoweb-struts.com.aoindustries.web.struts.ReCaptcha.googleCredentialsJson}"
    override="false"
  />

  <Parameter
    description="Display exceptions in the error handler"
    name="exception.showError" value="true"
    override="false"
  />

  <Parameter
    description="Enable the direct editing of resource bundles"
    name="com.aoindustries.web.struts.SiteSettings.canEditResources" value="true"
    override="false"
  />

  <Parameter
    description="XHTML enabled in development"
    name="com.aoapps.encoding.Serialization.default" value="auto"
    override="false"
  />

  <Parameter
    description="Automatic newline (and tab indentation when enabled) enabled in development"
    name="com.aoapps.html.servlet.DocumentEE.autonli" value="true"
    override="false"
  />

  <Parameter
    description="Tab indentation enabled in development"
    name="com.aoapps.html.servlet.DocumentEE.indent" value="true"
    override="false"
  />

  <Parameter
    description="Enable RFC 3987 IRI support in development"
    name="com.aoapps.servlet.filter.EncodeURIFilter.enableIRI" value="true"
    override="false"
  />

  <Parameter
    description="Do not filter whitespace in development"
    name="com.aoapps.servlet.filter.TrimFilter.enabled" value="false"
    override="false"
  />

</Context>
